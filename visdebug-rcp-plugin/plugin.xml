<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Sample Category"
            id="test-plugin">
      </category>
      <view
            category="test-plugin"
            class="testplugin.views.GlimpseArrayView"
            icon="icons/sample.gif"
            id="testplugin.views.GlimpseArrayView"
            name="Array View">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="Sample Category"
            id="test-plugin">
      </category>
      <view
            name="MyVars"
            icon="icons/sample.gif"
            category="test-plugin"
            class="testplugin.views.VariableSelectListener"
            id="testplugin.views.VariablesView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="testplugin.views.GlimpseArrayView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.debug.ui.DebugPerspective">
         <view
               ratio="0.2"
               relative="org.eclipse.debug.ui.VariableView"
               relationship="stack"
               id="testplugin.views.VariablesView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
